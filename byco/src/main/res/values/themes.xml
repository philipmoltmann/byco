<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Byco" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorAccent">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:alertDialogTheme">@style/Theme.Byco.InlineDialog</item>
        <item name="alertDialogTheme">@style/Theme.Byco.InlineDialog</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Byco.ActionBar" parent="Theme.AppCompat.DayNight">
        <item name="android:colorAccent">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:alertDialogTheme">@style/Theme.Byco.InlineDialog</item>
        <item name="alertDialogTheme">@style/Theme.Byco.InlineDialog</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:actionBarStyle">@style/BycoActionBar</item>
        <item name="actionBarStyle">@style/BycoActionBar</item>
    </style>

    <style name="Theme.Byco.BaseDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_window_background</item>
        <item name="android:colorBackground">@color/dialogBackground</item>
    </style>

    <style name="Theme.Byco.InlineDialog" parent="Theme.Byco.BaseDialog">
        <item name="android:colorAccent">@color/map_background</item>
        <item name="colorAccent">@color/map_background</item>
    </style>

    <style name="Theme.Byco.Fullscreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/map_background</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
    </style>

    <style name="Theme.Byco.Dialog" parent="Theme.Byco.InlineDialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Byco.Dialog.NoCloseOnTouchOutside" parent="Theme.Byco.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>